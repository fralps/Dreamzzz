<section id="section-nightmares">
	<div class="container">
		<div class="row">
			<div class="col col-md-6 mx-auto">
				<div class="create-form shadow">
					<!-- Retour à mon journal < -->
					<%= link_to dreams_path do %> 
					<svg class="icon link" width="24px" height="24px" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
						<title>Mon journal</title>
						<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
							<polygon points="0 0 24 0 24 24 0 24" opacity="0"></polygon>
							<path d="M6.70710678,15.7071068 C6.31658249,16.0976311 5.68341751,16.0976311 5.29289322,15.7071068 C4.90236893,15.3165825 4.90236893,14.6834175 5.29289322,14.2928932 L11.2928932,8.29289322 C11.6714722,7.91431428 12.2810586,7.90106866 12.6757246,8.26284586 L18.6757246,13.7628459 C19.0828436,14.1360383 19.1103465,14.7686056 18.7371541,15.1757246 C18.3639617,15.5828436 17.7313944,15.6103465 17.3242754,15.2371541 L12.0300757,10.3841378 L6.70710678,15.7071068 Z" fill="#000000" fill-rule="nonzero" transform="translate(12.000003, 11.999999) scale(-1, 1) rotate(-270.000000) translate(-12.000003, -11.999999) "></path>
						</g>
					</svg>
					<span class="text-small link">Mon journal</span>
					<% end %>

					<div class="mt-3">
						<h2 class="text-center"><%= image_tag("favicon.png", alt: "Dreamzzz Logo", class: 'icon icon-md mb-4 mr-2') %>Éditer mon cauchemar</h2>

						<!-- Errors partial -->
						<%= render 'nightmares/error_messages' %>

						<!-- Zone du formulaire -->
						<%= form_tag url_for(action: 'update'), method: "patch", class: "mt-4" do %>

						<%= text_field_tag 'title', @nightmare.title, class: "form-control mb-3" %>
						
						<span class="link"><%= label_tag 'Date du cauchemar :' %></span>
						<%= date_field_tag 'date', @nightmare.date, class: "form-control mb-3"  %>

						<%= text_area_tag 'description', @nightmare.description, class: "form-control mb-3" %>

						<%= text_field_tag 'emotion', @nightmare.emotion, class: "form-control mb-3" %>

						<%= submit_tag "Enregistrer les modifications", class: "edit-btn mb-3" %> 

						<% end %>

						<%= link_to "Supprimer le cauchemar", nightmare_path(@nightmare), method: :delete, data: { confirm: 'Vous allez supprimer votre cauchemar.. voulez-vous continuer ?' }, class: "delete-btn" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>