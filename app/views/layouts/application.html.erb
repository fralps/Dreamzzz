<!DOCTYPE html>
<html lang="fr">
<head>
    <title>Dreamzzz</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <%= favicon_link_tag asset_path('favicon.png') %>

    <link href="https://fonts.googleapis.com/css?family=Comfortaa&display=swap" rel="stylesheet">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    
    <!-- Box Icon -->
    <link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.3/css/boxicons.min.css' rel='stylesheet'>
</head>

<body data-smooth-scroll-offset="73" data-aos-easing="ease" data-aos-duration="600" class="min-vh-70">

    <!-- Page loading animation -->
    <%= render 'layouts/loader' %>

    <!-- Flash messages -->
    <%= render 'layouts/flash' %>
    
    <%= yield %>

    <!-- Sign in modal -->
    <%= render 'devise/sessions/sign_in_modal' %>

    <!-- Sign up modal -->
    <%= render 'devise/registrations/sign_up_modal' %>

    <!-- Back to top button -->
    <%= render 'layouts/back_to_top' %>
    
    <!-- Boostrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <!-- Box Icon JS -->
    <script src="https://unpkg.com/boxicons@latest/dist/boxicons.js"></script>

    <!-- Application.js -->
    <%= javascript_include_tag 'application' %>
</body>
</html>
