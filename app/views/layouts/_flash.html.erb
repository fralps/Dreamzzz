<!-- Partial for the flash alerts -->
<% flash.each do |key, value| %>
	<div class="<%= flash_class(key) %> delay_fadeout flash-screen" style="position:absolute; width: 40%; z-index:3; margin: 10px;">
		<%= value %>
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span></button>
	</div>
<% end %>