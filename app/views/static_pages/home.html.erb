        <%= link_to "Déconnexion", destroy_user_session_path, method: 'delete',class: 'sign-btn btn-white btn-animation-1 mr-3'%>

         <%= link_to "Mon compte", edit_user_registration_path, class: 'sign-btn btn-white btn-animation-1 mr-3'  %>

        <%= link_to "Mon journal", dreams_path, class: 'sign-btn btn-white btn-animation-1 mr-3'  %>

      <% else %>

        <%= link_to "Connexion", '#sign-in-modal', 'data-toggle' => 'modal', class: 'sign-btn btn-white btn-animation-1 mr-3'  %>

        <%= link_to "Inscription", '#sign-up-modal', 'data-toggle' => 'modal', class: 'sign-btn btn-white btn-animation-1'  %>

      <% end %>
    </p>
  </section>
