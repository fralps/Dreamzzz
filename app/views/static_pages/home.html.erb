<body>
  <section id="section-1">
    <div id="home-title">

      <h1 id="main-title" class="display-3"><%= image_tag("favicon.png", alt: "Dreamzzz Logo", class: 'logo') %>DREAMZ<span style="font-size: 70px;">z</span><span style="font-size: 40px;">z</span></h1>
      <span class="scroll-btn mt-5">
        <a href="#sign-in" data-smooth-scroll>
          <span class="mouse">
            <span>
            </span>
          </span>
        </a>
      </span>
    </div>
  </section>
  <section id="section-2">
    <h3 id="sign-in">Racontez-nous vos rêves...</h3>

    <p>
