<section id="section-edit">
  <div class="container">
    <div class="row">
      <div class="col col-md-6 mx-auto">
        <div class="create-form shadow">
          <h2 class="text-center mb-5"><%= image_tag("favicon.png", alt: "Dreamzzz Logo", class: 'form-logo') %>Éditer mes informations</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: 'Prénom', class: 'form-control mb-3' %>
          </div>

          <div class="field">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: 'Nom', class: 'form-control mb-3' %>
          </div>



          <div class="field mb-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control mb-3' %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <%= f.label 'Nouveau mot de passe' %> <i>(laisser blanc si vous ne voulez pas changer votre mot de passe)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: '6 caractères minimum', class: 'form-control mb-3' %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirmation du nouveau mot de passe', class: 'form-control mb-3' %>
          </div>

          <div class="field">
            <%= f.password_field :current_password, autocomplete: "current-password", placeholder: 'Mot de passe actuel', class: 'form-control mb-3'  %>
          </div>

          <div class="actions mb-4">
            <%= f.submit "Modifier", class: 'create-btn' %>
          </div>
          <hr>
          <% end %>

          <h5 class="text-danger text-center">Suppression de compte</h5>

          <p>Mécontent ? <%= button_to(registration_path(resource_name), data: { confirm: "Êtes vous sûr(e), la suppression est irréversible ?" }, method: :delete, class: 'btn btn-danger') do %>
            <i class="fas fa-trash mr-2"></i>Supprimer mon compte
            <% end %>
          </p>
          <%= link_to "Retour", :back, class: 'link' %>
        </div>
      </div>
    </div>
  </div>
</section>
