<section id="section-show">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="card card-article-wide flex-md-row no-gutters shadow" style="height: 500px">
					<div class="col-md-5 col-lg-6">
						<img src="https://media.giphy.com/media/d2Z7wetTpiqlmjq8/giphy.gif" alt="Image" class="card-img-top" height="auto">
					</div>
					<div class="card-body d-flex flex-column justify-content-between col-auto p-4 p-lg-5">
						<div>
							<div>
								<h2 class=""><%= image_tag("favicon.png", alt: "Dreamzzz Logo", class: 'icon icon-md mb-4') %> <%= @dream.title %></h2>
								<p class="text-muted text-sm mt-4"><%= @dream.date.strftime("%d/%m/%y") %></p>
							</div>
							<p><%= @dream.description %></p>
							<p> <span style="color: #8b52ff;">Émotion(s) ressentie(s) : </span><%= @dream.emotion %></p>
						</div>
						<div>

							<%= link_to(edit_dream_path(@dream.id), class: 'mr-1 injected-svg icon edit-btn', style: 'text-decoration: none;') do %>
							<i class="fas fa-pencil-alt edit text-white" id="edit"></i>
							<span>Éditer</span>
							<% end %> 

							<%= link_to(dream_path(@dream.id), method: :delete, data: { confirm: 'Vous allez supprimer votre rêve, voulez-vous continuer ?'}, class: 'delete-btn injected-svg icon') do %>
							<i class="far fa-trash-alt"></i>
							<span>Supprimer</span>
							<% end %> 

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>